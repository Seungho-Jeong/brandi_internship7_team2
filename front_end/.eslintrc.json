{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-essential",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": ["eslint-plugin-vue", "prettier"],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "printWidth": 80
      }
    ]
  },
  "env": {
    "node": true,
    "es6": true
  }
}
